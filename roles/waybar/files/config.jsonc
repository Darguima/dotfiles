    "spacing": 4, // Gaps between modules (4px)
    "modules-left": [
        "sway/workspaces",
        "sway/mode",
        "sway/scratchpad",
        "custom/media"
    ],
    "modules-center": [],
    "modules-right": [
        "mpd",
        "custom/disable_keyboard",
        "idle_inhibitor",
        "tray",
        "pulseaudio",
        "backlight",
        "battery",
        "battery#bat2",
        "clock",
        "custom/notification"
    ],
