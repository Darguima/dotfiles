### === Variables ===============================================

# Keys
set $mod Mod4
set $left h
set $down j
set $up k
set $right l

# Apps
set $term alacritty
set $menu wofi --show run | xargs swaymsg exec --
set $browser firefox
set $file_manager nautilus

set $lock_screen swaylock -f -c 000000
set $suspend systemctl suspend

### === Input configuration =====================================

# You can get the names of your inputs by running: swaymsg -t get_inputs
# Read `man 5 sway-input` for more information about this section.

input "type:keyboard" {
    xkb_layout us
    xkb_variant altgr-intl
    xkb_numlock enabled
}

input "type:touchpad" {
    tap enabled                 # enables click-on-tap
    pointer_accel 0.7           # acceleration factor
    scroll_factor 0.4           # scroll speed factor
    natural_scroll enabled      # invert scroll direction
}

### === Output configuration ====================================

# You can get the names of your outputs by running: swaymsg -t get_outputs

output * bg /usr/share/backgrounds/sway/Sway_Wallpaper_Blue_1920x1080.png fill

#Laptop
output eDP-1 pos 0 0 res 1920x1080 scale 1.4

# Desktop
output 'LG Electronics M2262D 0x01010101' pos 0 0 res 1920x1080@59.934Hz transform 180
output 'Lenovo Group Limited D27q-30 URHKV2PP' pos 1920 0 res 2560x1440@60Hz scale 1.4

# Workspaces
workspace 1 output 'Lenovo Group Limited D27q-30 URHKV2PP'
workspace 2 output 'Lenovo Group Limited D27q-30 URHKV2PP'
workspace 3 output 'Lenovo Group Limited D27q-30 URHKV2PP'
workspace 4 output 'LG Electronics M2262D 0x01010101'

### === Idle configuration ======================================

# Lock screen & turn off the screen

exec swayidle -w \
         timeout 300 '$lock_screen' \
         timeout 600 'swaymsg "output * power off"' resume 'swaymsg "output * power on"' \
         before-sleep '$lock_screen'

### === Appearance ==============================================

for_window {
  [shell="xwayland"] title_format "%title [XWayland]"

  [window_role="pop-up"] floating enable
  [window_role="bubble"] floating enable
  [window_role="dialog"] floating enable
  [window_type="dialog"] floating enable

  [app_id="org.gnome.Calculator"] floating enable
  [app_id="blueman-manager"] floating enable

  # [app_id=Alacritty] move to scratchpad, scratchpad show, $t_pos # Try understand the use
}

# gaps
# default_border pixel 3
# smart_borders on
# smart_gaps off
# gaps {
#   inner 0
#   outer 0
# }
